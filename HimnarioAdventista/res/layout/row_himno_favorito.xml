<?xml version="1.0" encoding="utf-8"?><LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="50dp" 
    android:orientation="horizontal">

   
    <TextView
        android:id="@+id/numeroHimnoFavorito"
	    android:layout_marginLeft="10dp"
	    android:layout_marginStart="10dp"
        android:layout_width="25dp"
        android:layout_height="fill_parent"
        android:gravity="end|center_vertical"
        android:textStyle="bold"
	    android:textSize="16sp"/>
    
    <TextView
	    android:id="@+id/tituloHimnoFavorito"
	    android:layout_width="0dp"
	    android:layout_weight="1"
	    android:layout_height="fill_parent"
	    android:layout_marginLeft="15dp"
	    android:layout_marginStart="15dp"
	    android:gravity="center_vertical"
	    android:textStyle="bold"
	    android:textSize="16sp"
	    android:singleLine="true"/>
    
	<ImageView
	    android:id="@+id/imagenSubirFavorito"
	   	android:layout_width="40dp"
	    android:layout_height="fill_parent"
	    android:padding="4dp"
	    android:onClick="subirFavorito"
	    android:src="@drawable/subir" />
	<ImageView
	    android:id="@+id/imagenBajarFavorito"
	   	android:layout_width="40dp"
	    android:layout_height="fill_parent"
	    android:padding="4dp"
	    android:onClick="bajarFavorito"
	    android:src="@drawable/bajar" />
	<ImageView
	    android:id="@+id/imagenEliminarFavorito"
	   	android:layout_width="40dp"
	    android:layout_height="fill_parent"
	    android:padding="4dp"
	    android:onClick="eliminarFavorito"
	    android:src="@drawable/eliminar" />
</LinearLayout>